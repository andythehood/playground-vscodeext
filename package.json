{
  "name": "appint",
  "displayName": "Data Transformer Playground",
  "publisher": "andythehood@gmail.com",
  "description": "Application Integration Extension",
  "icon": "media/icon.png",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/andythehood/playground-vscodeext"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "keywords": [
    "jsonnet",
    "data-transformer",
    "application-integration",
    "google-cloud"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "datatransformer",
        "path": "./syntaxes/datatransformer.tmLanguage.json",
        "scopeName": "source.datatransformer"
      }
    ],
    "languages": [
      {
        "id": "datatransformer",
        "extensions": [
          ".datatransformer"
        ],
        "aliases": [
          "Data Transformer"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/icon.png",
          "dark": "./media/icon.png"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "playground-sidebar-view",
          "title": "Application Integration",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [],
      "playground-sidebar-view": [
        {
          "id": "playgroundsTreeView",
          "type": "tree",
          "name": "Playgrounds",
          "visibility": "visible"
        },
        {
          "id": "scriptsTreeView",
          "type": "tree",
          "name": "Data Transformer Scripts",
          "visibility": "visible"
        },
        {
          "id": "variablesWebView",
          "type": "webview",
          "name": "Variables"
        },
        {
          "id": "helpTreeView",
          "type": "tree",
          "name": "Help and Feedback",
          "visibility": "collapsed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "playgroundsTreeView",
        "when": "workspaceFolderCount > 0",
        "contents": "No Playgrounds found [learn more](https://datatransformer-playground.web.app/).\n[New Playground](command:datatransformer.addPlayground)"
      },
      {
        "view": "playgroundsTreeView",
        "when": "workspaceFolderCount == 0",
        "contents": "No Workspace or Folder open. Please open a VSCode Workspace or Folder to use Data Transformer Playgrounds."
      },
      {
        "view": "scriptsTreeView",
        "contents": "Please select a playground.",
        "when": "!datatransformer.playgroundSelected"
      },
      {
        "view": "scriptsTreeView",
        "contents": "",
        "when": "datatransformer.playgroundSelected"
      }
    ],
    "commands": [
      {
        "command": "datatransformer.importPlayground",
        "title": "Import Playground",
        "icon": "$(cloud-download)"
      },
      {
        "command": "datatransformer.exportPlayground",
        "title": "Export Playground",
        "icon": "$(export)"
      },
      {
        "command": "datatransformer.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "datatransformer.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "datatransformer.addExtVar",
        "title": "Add Variable",
        "icon": "$(add)"
      },
      {
        "command": "datatransformer.addPlayground",
        "title": "Add Playground",
        "icon": "$(add)"
      },
      {
        "command": "datatransformer.takeSnapshot",
        "title": "Take Snapshot",
        "icon": "$(device-camera)"
      },
      {
        "command": "datatransformer.deletePlayground",
        "title": "Delete Playground",
        "icon": "$(trash)"
      },
      {
        "command": "datatransformer.addScript",
        "title": "Add Script",
        "icon": "$(add)"
      },
      {
        "command": "datatransformer.deleteScript",
        "title": "Delete Script",
        "icon": "$(trash)"
      },
      {
        "command": "datatransformer.insertSnippet",
        "title": "Data Transformer Playground: Import Functions Snippet"
      },
      {
        "command": "datatransformer.newTemplate",
        "title": "Data Transformer Playground: New Template"
      },
      {
        "command": "datatransformer.exampleTemplate",
        "title": "Data Transformer Playground: Example Template"
      },
      {
        "command": "datatransformer.selectAndRunScript",
        "title": "Data Transformer Playground: Run Script",
        "when": "editorLangId == datatransformer || view == scriptsTreeView",
        "icon": "$(play-circle)"
      },
      {
        "command": "datatransformer.selectAndRunScript",
        "title": "Data Transformer Playground: Run Script",
        "when": "editorLangId == datatransformer || view == scriptsTreeView",
        "icon": "$(play-circle)"
      }
    ],
    "keybindings": [
      {
        "command": "datatransformer.runScript",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "xwhen": "editorLangId == datatransformer || view == scriptsTreeView"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "datatransformer.addPlayground",
          "when": "view == playgroundsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "datatransformer.importPlayground",
          "when": "view == playgroundsTreeView",
          "group": "navigation@2"
        },
        {
          "command": "datatransformer.addScript",
          "when": "view == scriptsTreeView && datatransformer.playgroundSelected",
          "group": "navigation@1"
        },
        {
          "command": "datatransformer.addExtVar",
          "when": "view == variablesWebView && datatransformer.playgroundSelected",
          "group": "navigation@1"
        },
        {
          "command": "datatransformer.collapseAll",
          "when": "view == variablesWebView",
          "group": "navigation@3"
        },
        {
          "command": "datatransformer.expandAll",
          "when": "view == variablesWebView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "datatransformer.deletePlayground",
          "when": "view == playgroundsTreeView && viewItem == PlaygroundTreeitem",
          "group": "inline@1"
        },
        {
          "command": "datatransformer.exportPlayground",
          "when": "view == playgroundsTreeView && viewItem == PlaygroundTreeitem",
          "group": "inline@2"
        },
        {
          "command": "datatransformer.takeSnapshot",
          "when": "view == playgroundsTreeView && viewItem == PlaygroundTreeitem",
          "group": "inline@3"
        },
        {
          "command": "datatransformer.deleteScript",
          "when": "view == scriptsTreeView && viewItem == ScriptsTreeItem",
          "group": "inline@1"
        },
        {
          "command": "datatransformer.selectAndRunScript",
          "when": "view == scriptsTreeView",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "Data Transformer Playground",
      "properties": {
        "datatransformer.playground.serverUri": {
          "type": "string",
          "description": "URI of the Data Transformer Server",
          "default": "https://datatransformer-playground.web.app"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint ./src --ext .ts,.tsx",
    "postinstall": "npm install",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/codicons": "^0.0.35",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
