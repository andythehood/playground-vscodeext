{
  "name": "datatransformer",
  "displayName": "Data Transformer Playground",
  "publisher": "andythehood",
  "description": "Data Transformer Playground Extension",
  "icon": "media/icon.png",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/andythehood/playground-vscodeext"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "keywords": [
    "jsonnet",
    "data-transformer",
    "application-integration",
    "google-cloud"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "datatransformer",
        "path": "./syntaxes/datatransformer.tmLanguage.json",
        "scopeName": "source.datatransformer"
      }
    ],
    "languages": [
      {
        "id": "datatransformer",
        "extensions": [
          ".datatransformer"
        ],
        "aliases": [
          "Data Transformer"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/icon.png",
          "dark": "./media/icon.png"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "playground-sidebar-view",
          "title": "Data Transformer Playground",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [],
      "playground-sidebar-view": [
        {
          "id": "extVarsView",
          "type": "webview",
          "name": "External Variables"
        },
        {
          "id": "helpView",
          "name": "Help and Feedback",
          "visibility": "collapsed"
        }
      ]
    },
    "commands": [
      {
        "command": "playground.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "playground.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "playground.addExtVar",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "playground.save",
        "title": "Save",
        "icon": "$(save)"
      },
      {
        "command": "playground.restore",
        "title": "Restore",
        "icon": "$(refresh)"
      },
      {
        "command": "playground.insertSnippet",
        "title": "Data Transformer Playground: Import Functions Snippet"
      },
      {
        "command": "playground.newTemplate",
        "title": "Data Transformer Playground: New Template"
      },
      {
        "command": "playground.previewToSide",
        "title": "Data Transformer Playground: Open Preview to the Side",
        "when": "editorLangId == datatransformer",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "playground.collapseAll",
          "when": "view == extVarsView",
          "group": "navigation@2"
        },
        {
          "command": "playground.expandAll",
          "when": "view == extVarsView",
          "group": "navigation@3"
        },
        {
          "command": "playground.addExtVar",
          "when": "view == extVarsView",
          "group": "navigation@1"
        },
        {
          "command": "playground.save",
          "when": "view == extVarsView",
          "group": "navigation@5"
        },
        {
          "command": "playground.restore",
          "when": "view == extVarsView",
          "group": "navigation@6"
        }
      ]
    },
    "configuration": {
      "title": "Data Transformer Playground",
      "properties": {
        "datatransformer.playground.jsonnetServerUri": {
          "type": "string",
          "description": "URI of the Data Transformer Server",
          "default": "http://localhost:8080"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint ./src --ext .ts,.tsx",
    "postinstall": "npm install",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
